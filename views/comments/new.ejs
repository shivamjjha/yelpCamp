<h1>New Comment Form</h1>
<%- include('../partials/header') %>
<div class="container">
    <div class="row">
        <div class="text-center mx-auto">
            <h1>Add a new comment to <%= campground.name %> </h1>
        </div>
    </div>
    
    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="form-group row mx-auto">
            <input class="form-control col-sm-4 mx-auto" type="text" name="comment[text]" id="campgroundName" placeholder="Text">
        </div>
        <div class="form-text text-muted text-center form-group row">By: <%= currentUser.username %></div>
        <div class="form-group row">
            <div class="col-sm-10 text-center mx-auto">
                <button type="submit" class="btn btn-outline-success ">Submit</button>
            </div>
        </div>
    </form>
    <div>
        <a href="/campgrounds" class="btn btn-link pl-0" role="button">Go Back</a>
    </div>
</div>


<%- include('../partials/footer') %>

