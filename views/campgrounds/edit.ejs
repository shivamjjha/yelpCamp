<%- include('../partials/header') %>
<div class="container">
    <div class="row">
        <div class="text-center mx-auto">
            <h1>Edit Campground <%= campground.name %> </h1>
        </div>
    </div>

    <!-- Specify to use PUT method -->
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group row mx-auto">
            <input class="form-control col-sm-4 mx-auto" type="text" name="campgroundNew[name]" id="campgroundName" value="<%= campground.name %>">
        </div>
        <div class="form-group row mx-auto">
            <input class="form-control col-sm-4 mx-auto" type="text" name="campgroundNew[imgURL]" id="URL" value="<%= campground.imageURL %>">
        </div>
        <div class="form-group row mx-auto">
            <input class="form-control col-sm-4 mx-auto" type="text" name="campgroundNew[description]" id="desc" value="<%= campground.description %>">
        </div>
        <div class="form-group row">
            <div class="col-sm-10 text-center mx-auto">
                <button type="submit" class="btn btn-outline-success ">Submit</button>
            </div>
        </div>
    </form>
    <div>
        <a href="/campgrounds/<%= campground._id %> " class="btn btn-link pl-0" role="button">Go Back</a>
    </div>
</div>
<%- include('../partials/footer') %>