<%- include('../partials/header') %>
<div class="container">
    <div class="row">
        <div class="text-center mx-auto">
            <h1>Create a new Campground</h1>
        </div>
    </div>
    
    <form action="/campgrounds" method="POST">
        <div class="form-group row mx-auto">
            <input class="form-control col-sm-4 mx-auto" type="text" name="name" id="campgroundName" placeholder="name">
        </div>
        <div class="form-group row mx-auto">
            <input class="form-control col-sm-4 mx-auto" type="text" name="imgURL" id="URL" placeholder="image url">
        </div>
        <div class="form-group row mx-auto">
            <input class="form-control col-sm-4 mx-auto" type="text" name="description" id="desc" placeholder="Description">
        </div>
        <div class="form-group row">
            <div class="col-sm-10 text-center mx-auto">
                <button type="submit" class="btn btn-outline-success ">Submit</button>
            </div>
        </div>
    </form>
    <div>
        <a href="/campgrounds" class="btn btn-link pl-0" role="button">Go Back</a>
    </div>
</div>


<%- include('../partials/footer') %>